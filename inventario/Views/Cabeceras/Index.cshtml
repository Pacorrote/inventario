@model IEnumerable<inventario.Cabecera>

@{
    ViewBag.Title = "Index";
}

<h2>Cabecera</h2>

<p class="btn btn-green">
    @Html.ActionLink("Agregar venta", "Create")
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cliente.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleado.IdEmp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleado.Persona.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movimiento.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departamento.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Empleado.IdEmp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Empleado.Persona.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Movimiento.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdCab }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdCab }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdCab })
                </td>
            </tr>
        }
    </tbody>



</table>
