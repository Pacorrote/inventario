@model IEnumerable<inventario.Cliente>

@{
    ViewBag.Title = "Index";
}

<h2>Clientes</h2>

<p class="btn btn-green">
    @Html.ActionLink("Crear", "Create")
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Persona.Nombre)
            </th>
            <th>
                Apellidos
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empresa)
            </th>
            <th></th>
        </tr>
    </thead>
        <tbody>
            @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Persona.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Persona.Apellido1)
                    @Html.DisplayFor(modelItem => item.Persona.Apellido2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Empresa)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdCli }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.IdCli }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.IdCli })
                </td>
            </tr>
        }
    </tbody>

        

</table>
