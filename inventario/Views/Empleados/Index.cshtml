@model IEnumerable<inventario.Empleado>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p class="btn btn-green">
    @Html.ActionLink("Crear", "Create")
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Persona.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sueldo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Persona.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sueldo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.IdEmp }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.IdEmp }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.IdEmp })
        </td>
    </tr>
}
    </tbody>
        

</table>
